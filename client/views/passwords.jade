template(name='passwordsField')
  .form-group
    input(autofocus id=id name=name type=type class='form-control' value=value placeholder=placeholder data-parsley-minlength=min required)


template(name='passwordsWrapper')
  .container
    if logo
      .passwords-logo
        a(href='/' )
          img(src='#{logo}' alt='logo')
    .passwords
      .col-sm-4.col-sm-offset-4
        h3 {{i18n head}}

        +UI.dynamic template=template data=top
        +flashMessages
        form.passwords-form
          each fields
            +passwordsField
          button(type='submit').btn.btn-block.btn-default {{i18n submit}}

        +UI.dynamic template=template data=bottom
  

template(name='signUp')
  if top
    p.passwords-signIn-link
      | {{i18n "links.allreadyHave"}} 
      a(href="{{pathFor 'signIn'}}") {{i18n "signin"}}
  else
    p.passwords-agreement
      | {{i18n "clickAgree"}}
      a(href='#{urls.privacy}') {{i18n "privacyPolicy"}}
      | {{i18n "and"}}
      a(href='#{urls.terms}') {{i18n "terms"}}
